<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4 offset4">
      <h1><%=t.index.title %></h1>
    </div>
  </div>
   <div class="row-fluid">
    <div class="span6 offset3 well">
      <form id="search-form" action="" method="get">
        <div class="row-fluid">
          <span class="span2"><%=t.content.from %>: </span>
          <select name="search[from][country]" class="span3">
            <option value=""><%=t.content.country %></option>
            <option value="france"><%=t.countries.france %></option>
            <option value="germany"><%=t.countries.germany %></option>
          </select>
          <input type="text" name="search[from][city]" placeholder="City" class="span4" />
          <select name="search[from][radius]" class="span3">
            <option value="1"><%=t.content.radius %></option>

            <% [1, 2, 5, 10, 20, 30, 40, 50].each do |i| %>
              <option value="<%=i %>"><%=i %> km</option>
            <% end %>

          </select>
        </div>
        <div class="row-fluid">
          <span class="span2"><%=t.content.to %>: </span>
          <select name="search[to][country]" class="span3">
            <option value=""><%=t.content.country %></option>
            <option value="france"><%=t.countries.france %></option>
            <option value="germany"><%=t.countries.germany %></option>
          </select>
          <input type="text" name="search[to][city]" placeholder="City" class="span4" />
          <select name="search[to][radius]" class="span3">
            <option value="1"><%=t.content.radius %></option>

            <% [1, 2, 5, 10, 20, 30, 40, 50].each do |i| %>
              <option value="<%=i %>"><%=i %> km</option>
            <% end %>

          </select>
        </div>
        <div class="row-fluid">
          <input id="when-date" type="text" placeholder="Date"
                 name="search[when][date]" class="span5 offset2"/>
          <select name="search[when][margin]" class="span5">
            <option value=""><%=t.content.margin %></option>
            <option value="0"><%=t.content.fix %></option>
            <option value="1">+/-1 <%=t.content.day %></option>
            <option value="2">+/-2 <%=t.content.days %></option>
            <option value="3">+/-3 <%=t.content.days %></option>
            <option value="4">+/-4 <%=t.content.days %></option>
          </select>
        </div>
        <div class="row-fluid">
          <span class="span5 offset2"><%=t.content.booking_bullshit %>: </span>
          <select id="booking" name="search[booking]" class="span5">
            <option value='both'><%=t.content.both %></option>
            <option value='yes'><%=t.content.sure %></option>
            <option value='no'><%=t.content.no_way %></option>
          </select>
        </div>
        <input class="btn btn-large" type="submit" value="<%=t.content.search %>" />
      </form>
    </div>
  </div>
</div>
