<div class="container-fluid">
  <div class="row-fluid">
    <div class="span4 offset4">
      <h1>Look for a trip</h1>
    </div>
  </div>
   <div class="row-fluid">
    <div class="span6 offset3 well">
      <form action="" method="post">
        <p>
          <span>From: </span>
          <select name="search[from][country]">
            <option value="">Country</option>
            <option value="fr">France</option>
            <option value="de">Germany</option>
          </select>
          <input type="text" name="search[from][city]" placeholder="City" />
        </p>
        <p>
          <span>To: </span>
          <select name="search[to][country]">
            <option value="">Country</option>
            <option value="fr">France</option>
            <option value="de">Germany</option>
          </select>
          <input type="text" name="search[to][city]" placeholder="City" />
        </p>
        <p>
          <input type="date" placeholder="Date" name="search[when][date]" />
          <select name="search[when][margin]">
            <option value="">Margin</option>
            <option value="0">Fix</option>
            <option value="1">+/-1 day</option>
            <option value="2">+/-2 day</option>
            <option value="3">+/-3 day</option>
          </select>
        </p>

        <input type="submit" value="submit" />
      </form>
    </div>
  </div>
</div>
