<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6 offset3">
      <h1>
        <%= search[:from][:city] %>
        to&nbsp;<%= search[:to][:city] %>
      </h1>
      <h2>
        The&nbsp;<%= search[:when][:date] %>
      </h2>
    </div>
  </div>

  <% results.each do |result| %>
    <div class="row-fluid">
      <div class="span6 offset3 well">
        <%= [result.name, result.phone].join ' ' %>
        <%= result.date %>
        <%= result.booking %>
        <%= result.service %>
        <a href="<%= result.link %>" target="_blank">Go to the link</a>
      </div>
    </div>
  <% end %>
</div>
