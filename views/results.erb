<div class="container-fluid">
  <div class="row-fluid">
    <div class="span6 offset3">
      <h1>
        <%= search[:from][:city] %>
        to&nbsp;<%= search[:to][:city] %>
      </h1>
      <h2>
        The&nbsp;<%= search[:when][:date] %>
      </h2>
    </div>
  </div>

  <% results.each do |result| %>
    <div class="row-fluid">
      <div class="span6 offset3 well">
        <div class="row-fluid">
          <div class="span3"><%= result.username %></div>
          <div class="span4"><%= result.date %></div>
          <div class="span5">
            <a href="<%= result.link %>" target="_blank" class="pull-right">
              See on <%= result.service %>
            </a>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span4"><b>Booking system: </b><%= result.booking %></div>
          <div class="span2 pull-right"><%= result.price %></div>
        </div>
      </div>
    </div>
  <% end %>

</div>
